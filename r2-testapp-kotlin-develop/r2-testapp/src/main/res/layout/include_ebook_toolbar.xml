<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="org.readium.r2.testapp.epub.fragment.OverlayViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dip"
            android:layout_marginTop="20dip"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginEnd="20dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_bookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginEnd="20dip"
            app:layout_constraintEnd_toStartOf="@+id/img_more"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginEnd="20dip"
            app:layout_constraintEnd_toStartOf="@+id/img_bookmarks"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginEnd="20dip"
            app:layout_constraintEnd_toStartOf="@+id/img_style"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginEnd="20dip"
            app:layout_constraintEnd_toStartOf="@+id/img_search"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginEnd="20dip"
            android:text="Klar"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>