<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.readium.r2.testapp.epub.fragment.OverlayViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.readium.r2.testapp.epub.fragment.OverlayFragment">

        <FrameLayout
            android:id="@+id/frame_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/include_ebook_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:viewModel="@{viewModel}" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/img_more"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="22dip"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="18dip"
                android:text="The wise mans fear"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/img_more"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dip"
                android:layout_marginEnd="15dip"
                android:onProgressChanged="@{viewModel.onPageSeekChanged}"
                app:layout_constraintStart_toEndOf="@+id/img_more"
                app:layout_constraintTop_toTopOf="@+id/img_more" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dip"
                android:layout_marginBottom="18dip"
                app:layout_constraintBottom_toTopOf="@+id/txt_chapter"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/icon_left" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dip"
                android:text="7 av 199"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dip"
                android:layout_marginBottom="40dip"
                android:text="6%"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dip"
                android:layout_marginBottom="40dip"
                android:text="Kapitel 1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
